%h1 Create New Account

= form_tag accounts_path do

  = label :account, :account_name, 'Account Name'
  = text_field :account, :name
  
  = label :account, :password, 'Password'
  = text_field :account, :password
  
  = label :user, :name, 'Name'
  = text_field :user, :name
  
  = label :user, :phone_number, 'Phone Number'
  = text_field :user, :phone_number
  
  = label :user, :location, 'Location'
  = text_field :user, :location
  
  = label :account :skills 'Skills'
  = check_box_tag 