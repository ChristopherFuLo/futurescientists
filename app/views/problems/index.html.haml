%html
  %head
    %link{:href => "bootstrap/css/bootstrap.css", :rel => "stylesheet", :type => "text/css"}
      %link{:href => "css/main.css", :rel => "stylesheet", :type => "text/css"}
  %body
    .navbar.navbar-static-top
      .navbar-inner
        .container
          %a#nav-left.brand.pull-left Future Scientists
          %ul.nav.pull-right
            %li
              %a#post{:href => "#"} Post
            %li
              %a#sign_up{:href => "accounts/new"} Sign Up
            %li
              %a#log_in{:href => "#"} Log In
    %br
      .container
        .row
          .span8.offset2
            .well
              %table#listings_table.table.table-striped.table-bordered
                %thead
                  %tr
                    %th Problem Summary
                    %th Skills
                    %th Location
                    %th Wage
                %tbody
                  - @problems.each do |problem|
                    %tr
                      %td= link_to "#{problem.summary}", problem_path(problem)
                      %td= problem.skills
                      %td= problem.location
                      %td= '50'
