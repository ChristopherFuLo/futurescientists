%html
  %head
    %link{:href => "/bootstrap/css/bootstrap.css", :rel => "stylesheet", :type => "text/css"}
  %body
    .navbar.navbar-static-top
      .navbar-inner
        .container
          %a#nav-left.brand.pull-left{:href => "/"} Future Scientists
          - unless flash[:notice].nil?
            = flash[:notice]
          %ul.nav.pull-right
            %li
              %a#submit_new_problem{:href => "/problems/new"} Submit New Problem
            %li
              %a#sign_up{:href => "/accounts/new"} Sign Up
            %li
              - if session[:account].nil?
                %a#log_in{:href => "/accounts/login_form"} Log In
              - else
                %a#log_out{:href => "/accounts/logout"} Log Out
    %br
      .span9.offset1
        .well
          .container
            .span8
              %legend Problem Submission

              = form_tag problems_path do

                = label :user, :name, 'Name'
                = text_field :user, :name
  
                = label :user, :phone_number, 'Phone Number'
                = text_field :user, :phone_number, :placeholder=>"xxx-xxx-xxxx", :required=>""
  
                = label :user, :location, 'Location'
                = text_field :problem, :location, :required=>""

                = label :problem, :skills, 'Skills Required'
                = select_tag('skills', options_from_collection_for_select(@all_skills, 'skill_name', 'skill_name'))

                = label :problem, :summary, 'Problem Summary'
                = text_field :problem, :summary, :required=>""

                = label :problem, :description, 'Description'
                = text_area :problem, :description
                %br
                = submit_tag 'Submit Problem', :class=>"btn btn-primary span3"
