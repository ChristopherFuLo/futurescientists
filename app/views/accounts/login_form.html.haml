=render :partial => '/layouts/header'
%br
  .span8.offset1
    .well
      .container
        .span8
          %h3 Login

          - unless flash[:error].nil?
            = flash[:error]

          = form_tag 'login' do


            = label :account, :account_name, 'Account Name'
            = text_field :account, :account_name

  
            = label :account, :password, 'Password'
            = text_field :account, :password, :type => 'password'
            %br
            = submit_tag 'Login', :class=>"btn btn-primary span3"
            %br
            %br
            Not Registered yet? 
            %a#sign_up{:href => "/accounts/new"} Sign Up
            %br
            Forgot Account Name?
            %a#sign_up{:href => "/accounts/forgot_account"} Click Here
            %br
            Forgot Password?
            %a#sign_up{:href => "/accounts/forgot_password"} Click Here
