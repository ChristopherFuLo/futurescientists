=render :partial => '/layouts/header'
%br
  .span9.offset1
    .well
      .container
        .span8
          %legend Edit Email
          = form_tag 'update', :method => :put  do
            = label :email, :address, 'Email'
            = text_field :email, :address
            = submit_tag 'Update'

          %legend Edit Password

          = form_tag 'changepass', :method => :put do

            = label :password, :current, 'Current Password'
            = text_field :password, :current, :type => 'password'
            = label :password_new, :new, 'New Password'
            = text_field :password_new, :new, :type => 'password'

            = label :reenter, :pass, 'Reenter New Password'
            = text_field :reenter, :pass, :type => 'password'

            = submit_tag 'Change Password'

